<resources>
    <!-- Base application theme. -->
    <style name="Theme.RetailInMotionTask" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorOnBackground">@android:color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_primary_color</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_secondary_color</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="colorSurface">@color/brand_color_surface</item>
        <item name="android:statusBarColor">@color/brand_secondary_color</item>
    </style>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/brand_primary_color</item>
        <item name="android:titleTextColor">@android:color/white</item>
    </style>
</resources>